<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard com Abas Estilo Pasta</title>
    
    <!-- Tailwind CSS via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Ícones (Phosphor Icons) -->
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        /* Usando a fonte Inter para um visual mais moderno */
        body {
            font-family: 'Inter', sans-serif;
        }
        /* Estilo para uma transição suave ao trocar de aba */
        .tab-content {
            transition: opacity 0.2s ease-in-out;
        }
        .tab-content.hidden {
            opacity: 0;
            pointer-events: none;
        }
    </style>
</head>
<body class="bg-gray-50 text-gray-800">

    <main class="p-4 sm:p-6 lg:p-8 max-w-7xl mx-auto">
        
        <!-- Container das abas -->
        <div>
            <!-- Botões de Navegação (Abas) -->
            <div class="flex">
                <!-- Aba Ativa por padrão -->
                <button id="btn-visao-geral" class="tab-button flex items-center gap-2 py-3 px-5 font-semibold text-blue-600 bg-white rounded-t-lg border-l border-t border-r border-gray-200 -mb-px relative z-10">
                    <i class="ph ph-chart-pie-slice text-lg"></i>
                    Visão Geral
                </button>
                <!-- Aba Inativa -->
                <button id="btn-gestao-pessoas" class="tab-button flex items-center gap-2 py-3 px-5 font-semibold text-gray-500 hover:text-blue-600 border-b border-gray-200">
                    <i class="ph ph-users-three text-lg"></i>
                    Gestão de Pessoas
                </button>
                <!-- Borda inferior para preencher o espaço restante -->
                <div class="flex-grow border-b border-gray-200"></div>
            </div>

            <!-- Conteúdo das Abas -->
            <div class="relative bg-white p-6 rounded-b-lg rounded-tr-lg border border-gray-200 shadow-sm">
                
                <!-- ABA 1: Visão Geral -->
                <div id="content-visao-geral" class="tab-content">
                    <h1 class="text-2xl font-bold text-gray-800 mb-6">Visão Geral</h1>
                    
                    <!-- Grid de Cartões de Métricas -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                        <!-- Card: Receita Total -->
                        <div class="bg-blue-50 p-5 rounded-xl border border-blue-100 transform hover:scale-105 transition-transform">
                            <div class="flex justify-between items-start mb-2">
                                <span class="text-gray-600 font-medium">Receita Total</span>
                                <div class="bg-blue-100 text-blue-600 p-2 rounded-lg">
                                    <i class="ph ph-currency-dollar text-xl"></i>
                                </div>
                            </div>
                            <p class="text-3xl font-bold text-gray-900">R$ 45.2K</p>
                            <p class="text-sm text-green-600 mt-1 flex items-center gap-1">
                                <i class="ph ph-arrow-up"></i>
                                <span>+12% em relação ao mês anterior</span>
                            </p>
                        </div>

                        <!-- Card: Vendas -->
                        <div class="bg-green-50 p-5 rounded-xl border border-green-100 transform hover:scale-105 transition-transform">
                            <div class="flex justify-between items-start mb-2">
                                <span class="text-gray-600 font-medium">Vendas</span>
                                 <div class="bg-green-100 text-green-600 p-2 rounded-lg">
                                    <i class="ph ph-shopping-cart-simple text-xl"></i>
                                </div>
                            </div>
                            <p class="text-3xl font-bold text-gray-900">1.2K</p>
                            <p class="text-sm text-green-600 mt-1 flex items-center gap-1">
                                <i class="ph ph-arrow-up"></i>
                                <span>+8% em relação ao mês anterior</span>
                            </p>
                        </div>

                        <!-- Card: Clientes -->
                        <div class="bg-purple-50 p-5 rounded-xl border border-purple-100 transform hover:scale-105 transition-transform">
                            <div class="flex justify-between items-start mb-2">
                                <span class="text-gray-600 font-medium">Clientes</span>
                                <div class="bg-purple-100 text-purple-600 p-2 rounded-lg">
                                    <i class="ph ph-users text-xl"></i>
                                </div>
                            </div>
                            <p class="text-3xl font-bold text-gray-900">892</p>
                            <p class="text-sm text-green-600 mt-1 flex items-center gap-1">
                                <i class="ph ph-arrow-up"></i>
                                <span>+15% em relação ao mês anterior</span>
                            </p>
                        </div>

                        <!-- Card: Pedidos -->
                        <div class="bg-orange-50 p-5 rounded-xl border border-orange-100 transform hover:scale-105 transition-transform">
                            <div class="flex justify-between items-start mb-2">
                                <span class="text-gray-600 font-medium">Pedidos</span>
                                <div class="bg-orange-100 text-orange-600 p-2 rounded-lg">
                                    <i class="ph ph-package text-xl"></i>
                                </div>
                            </div>
                            <p class="text-3xl font-bold text-gray-900">156</p>
                            <p class="text-sm text-red-600 mt-1 flex items-center gap-1">
                                <i class="ph ph-arrow-down"></i>
                                <span>-3% em relação ao mês anterior</span>
                            </p>
                        </div>
                    </div>

                    <!-- Grid para Gráficos -->
                    <div class="grid grid-cols-1 lg:grid-cols-5 gap-6">
                        <div class="lg:col-span-3 bg-gray-50 p-5 rounded-xl border border-gray-200 h-96 flex flex-col">
                            <h2 class="text-lg font-semibold text-gray-700 mb-4">Vendas por Mês</h2>
                            <div class="flex-grow flex items-center justify-center text-gray-400 bg-white rounded-lg border">
                               Gráfico de Vendas
                            </div>
                        </div>
                        <div class="lg:col-span-2 bg-gray-50 p-5 rounded-xl border border-gray-200 h-96 flex flex-col">
                            <h2 class="text-lg font-semibold text-gray-700 mb-4">Produtos Mais Vendidos</h2>
                            <div class="flex-grow flex items-center justify-center text-gray-400 bg-white rounded-lg border">
                               Gráfico de Produtos
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ABA 2: Gestão de Pessoas -->
                <div id="content-gestao-pessoas" class="tab-content hidden absolute top-0 left-0 p-6 w-full">
                    <h1 class="text-2xl font-bold text-gray-800 mb-6">Gestão de Pessoas</h1>
                    
                    <!-- Grid de Cartões de Métricas de Pessoas -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                        <div class="bg-indigo-50 p-5 rounded-xl border border-indigo-100">
                            <h3 class="font-medium text-gray-600">Total de Colaboradores</h3>
                            <p class="text-3xl font-bold text-gray-900 mt-2">42</p>
                        </div>
                         <div class="bg-teal-50 p-5 rounded-xl border border-teal-100">
                            <h3 class="font-medium text-gray-600">Novas Contratações (Mês)</h3>
                            <p class="text-3xl font-bold text-gray-900 mt-2">3</p>
                        </div>
                         <div class="bg-yellow-50 p-5 rounded-xl border border-yellow-100">
                            <h3 class="font-medium text-gray-600">Aniversariantes do Mês</h3>
                            <p class="text-3xl font-bold text-gray-900 mt-2">5</p>
                        </div>
                         <div class="bg-pink-50 p-5 rounded-xl border border-pink-100">
                            <h3 class="font-medium text-gray-600">Vagas Abertas</h3>
                            <p class="text-3xl font-bold text-gray-900 mt-2">2</p>
                        </div>
                    </div>

                    <!-- Tabela da Equipe -->
                    <div class="bg-gray-50 p-5 rounded-xl border border-gray-200">
                        <h2 class="text-lg font-semibold text-gray-700 mb-4">Membros da Equipe</h2>
                        <div class="overflow-x-auto">
                            <table class="w-full text-left">
                                <thead class="border-b-2 border-gray-200">
                                    <tr>
                                        <th class="py-3 px-4 font-semibold text-sm">Nome</th>
                                        <th class="py-3 px-4 font-semibold text-sm">Cargo</th>
                                        <th class="py-3 px-4 font-semibold text-sm">Email</th>
                                        <th class="py-3 px-4 font-semibold text-sm">Status</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200">
                                    <tr>
                                        <td class="py-4 px-4 flex items-center gap-3">
                                            <img src="https://placehold.co/40x40/E2E8F0/4A5568?text=AS" alt="Avatar de Ana Silva" class="w-10 h-10 rounded-full" onerror="this.onerror=null;this.src='https://placehold.co/40x40/E2E8F0/4A5568?text=A';">
                                            <div>
                                                <div class="font-medium">Ana Silva</div>
                                                <div class="text-sm text-gray-500">@anasilva</div>
                                            </div>
                                        </td>
                                        <td class="py-4 px-4">Desenvolvedora Frontend</td>
                                        <td class="py-4 px-4">ana.silva@example.com</td>
                                        <td class="py-4 px-4"><span class="bg-green-100 text-green-800 text-xs font-semibold px-2.5 py-1 rounded-full">Ativo</span></td>
                                    </tr>
                                    <tr>
                                        <td class="py-4 px-4 flex items-center gap-3">
                                            <img src="https://placehold.co/40x40/E2E8F0/4A5568?text=CP" alt="Avatar de Carlos Pereira" class="w-10 h-10 rounded-full" onerror="this.onerror=null;this.src='https://placehold.co/40x40/E2E8F0/4A5568?text=C';">
                                            <div>
                                                <div class="font-medium">Carlos Pereira</div>
                                                <div class="text-sm text-gray-500">@carlosp</div>
                                            </div>
                                        </td>
                                        <td class="py-4 px-4">Gerente de Projetos</td>
                                        <td class="py-4 px-4">carlos.p@example.com</td>
                                        <td class="py-4 px-4"><span class="bg-green-100 text-green-800 text-xs font-semibold px-2.5 py-1 rounded-full">Ativo</span></td>
                                    </tr>
                                    <tr>
                                        <td class="py-4 px-4 flex items-center gap-3">
                                            <img src="https://placehold.co/40x40/E2E8F0/4A5568?text=MC" alt="Avatar de Mariana Costa" class="w-10 h-10 rounded-full" onerror="this.onerror=null;this.src='https://placehold.co/40x40/E2E8F0/4A5568?text=M';">
                                            <div>
                                                <div class="font-medium">Mariana Costa</div>
                                                <div class="text-sm text-gray-500">@mcosta</div>
                                            </div>
                                        </td>
                                        <td class="py-4 px-4">Designer UX/UI</td>
                                        <td class="py-4 px-4">mariana.c@example.com</td>
                                        <td class="py-4 px-4"><span class="bg-yellow-100 text-yellow-800 text-xs font-semibold px-2.5 py-1 rounded-full">Férias</span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Seleciona os elementos do DOM
        const btnVisaoGeral = document.getElementById('btn-visao-geral');
        const btnGestaoPessoas = document.getElementById('btn-gestao-pessoas');
        
        const contentVisaoGeral = document.getElementById('content-visao-geral');
        const contentGestaoPessoas = document.getElementById('content-gestao-pessoas');

        // Define as classes para cada estado da aba
        const activeClasses = ['text-blue-600', 'bg-white', 'rounded-t-lg', 'border-l', 'border-t', 'border-r', 'border-gray-200', '-mb-px', 'relative', 'z-10'];
        const inactiveClasses = ['text-gray-500', 'hover:text-blue-600', 'border-b', 'border-gray-200'];
        
        // Função para alternar abas
        function switchTab(activeButton, inactiveButton, activeContent, inactiveContent) {
            // Esconde o conteúdo inativo e mostra o ativo
            activeContent.classList.remove('hidden', 'absolute');
            inactiveContent.classList.add('hidden', 'absolute');

            // Atualiza os estilos dos botões
            activeButton.classList.add(...activeClasses);
            activeButton.classList.remove(...inactiveClasses);
            
            inactiveButton.classList.add(...inactiveClasses);
            inactiveButton.classList.remove(...activeClasses);
        }

        // Adiciona os event listeners aos botões
        btnVisaoGeral.addEventListener('click', () => {
            switchTab(btnVisaoGeral, btnGestaoPessoas, contentVisaoGeral, contentGestaoPessoas);
        });

        btnGestaoPessoas.addEventListener('click', () => {
            switchTab(btnGestaoPessoas, btnVisaoGeral, contentGestaoPessoas, contentVisaoGeral);
        });
    </script>
</body>
</html>
